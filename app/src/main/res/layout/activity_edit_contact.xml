<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EditContactActivity">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:src="@drawable/ic_launcher_foreground"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/iv_photo"
        android:text="Name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_below="@id/tv_name"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:ems="11"
        android:inputType="textPersonName"
        android:textColor="@color/text"
         />

    <TextView
        android:id="@+id/tv_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_marginStart="20dp"
        android:text="Surname"
        android:textSize="30sp"
        android:textColor="@color/text"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/et_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_below="@id/tv_surname"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:textSize="16sp"
        android:ems="11"
        android:inputType="textPersonName"
        android:textColor="@color/text"
        />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_photo"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="Phone number"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phone"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="16sp"
        android:ems="11"
        android:inputType="phone"
        android:textColor="@color/text"
        />

    <TextView
        android:id="@+id/tv_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_phone"
        android:layout_marginStart="5dp"
        android:textSize="30sp"
        android:text="Birthday"
        android:textStyle="bold"
        android:textColor="@color/text"
        />

    <EditText
        android:id="@+id/et_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_birthday"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:ems="11"
        android:textColor="@color/text"
        android:clickable="true"
        android:focusable="false"
        android:inputType="date"
        android:maxLines="1"/>

    <LinearLayout
        android:id="@+id/div_btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_birthday"
        >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_birthday"
                android:textSize="16sp"
                android:onClick="editContact"
                android:text="Edit"
                android:textColor="@color/text"
                android:backgroundTint="@color/design2"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/div_btn_delete"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_below="@id/et_birthday"
            android:layout_toRightOf="@id/div_btn_edit"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/et_birthday"
                android:onClick="deleteContact"
                android:text="Delete"
                android:textColor="@color/text"
                android:backgroundTint="@color/design2"
                />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>